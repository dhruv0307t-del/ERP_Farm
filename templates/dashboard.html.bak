<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Cattle ERP ‚Äì Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>body{background:#f2f5f9}</style>
</head>
<body class="min-h-screen">
  <nav class="bg-green-600 p-4 shadow-md flex justify-between items-center">
    <h1 class="text-white text-2xl font-bold">üêÑ Cattle ERP</h1>
    <div class="space-x-4">
      <a href="/animals" class="bg-white text-green-700 px-4 py-2 rounded-lg font-semibold">Manage Animals</a>
      <a href="/" class="bg-white text-green-700 px-4 py-2 rounded-lg font-semibold">Home</a>
    </div>
  </nav>

  <div class="p-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div class="bg-white p-6 rounded-xl shadow"><p class="text-gray-500 text-sm">Total Animals</p><p class="text-3xl font-bold mt-2">{{ total_animals }}</p></div>
      <div class="bg-white p-6 rounded-xl shadow"><p class="text-gray-500 text-sm">Today's Milk (L)</p><p class="text-3xl font-bold mt-2">{{ today_milk }}</p></div>
      <div class="bg-white p-6 rounded-xl shadow"><p class="text-gray-500 text-sm">Avg Last 7 Days</p><p class="text-3xl font-bold mt-2">{{ avg_last7 }}</p></div>
      <div class="bg-white p-6 rounded-xl shadow"><p class="text-gray-500 text-sm">Pregnant Cows</p><p class="text-3xl font-bold mt-2">{{ pregnant_count }}</p></div>
    </div>

    <div class="mt-10 bg-white p-6 rounded-xl shadow">
      <h2 class="text-xl font-bold mb-4 text-gray-700">Milk Production (Last 14 Days)</h2>
      <canvas id="milkChart" height="120"></canvas>
    </div>

    <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white p-5 rounded-xl shadow">
        <h3 class="font-semibold mb-3">Top Producers (30d)</h3>
        {% if top_producers %}
        <table class="w-full text-left">
          <tr class="border-b font-semibold"><th class="py-2">Tag</th><th>Total (L)</th></tr>
          {% for a in top_producers %}
          <tr class="border-b"><td class="py-2">{{ a.tag_no }}</td><td>{{ a.total_liters }}</td></tr>
          {% endfor %}
        </table>
        {% else %}
        <p class="text-gray-500">No data</p>
        {% endif %}
      </div>

      <div class="bg-white p-5 rounded-xl shadow">
        <h3 class="font-semibold mb-3">Recent Events</h3>
        {% if recent_events %}
        <ul class="space-y-2">
          {% for e in recent_events %}
          <li class="text-sm border-b pb-2">#{{ e.animal_id }} ‚Äî {{ e.event_type }} on {{ e.entry_date }}</li>
          {% endfor %}
        </ul>
        {% else %}
        <p class="text-gray-500">No events</p>
        {% endif %}
      </div>
    </div>
  </div>

  <script>
    // use chart_labels and chart_data provided by main.py
    const labels = {{ chart_labels | safe }};
    const data = {{ chart_data | safe }};

    new Chart(document.getElementById('milkChart'), {
      type: 'line',
      data: {
        labels: labels,
        datasets: [{
          label: 'Milk (L)',
          data: data,
          borderWidth: 3,
          borderColor: 'rgb(34,197,94)',
          backgroundColor: 'rgba(34,197,94,0.2)',
          tension: 0.3
        }]
      },
      options:{responsive:true,scales:{y:{beginAtZero:true}}}
    });
  </script>
</body>
</html>
